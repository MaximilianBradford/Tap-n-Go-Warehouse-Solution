<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 🌟 Main App Theme (Light Mode) -->
    <style name="Theme.TapNGo" parent="Theme.Material3.Light"> <!-- ✅ FIXED -->
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <!-- Hide ActionBar (Fix for NoActionBar) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Text Styles -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>

        <!-- Custom Styles -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="textInputStyle">@style/CustomTextInput</item>
        <item name="cardViewStyle">@style/CustomCardStyle</item>
    </style>

    <!-- 🌙 Dark Mode Theme -->
    <style name="Theme.TapNGo.Dark" parent="Theme.Material3.Dark"> <!-- ✅ ADDED -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- 🌟 Splash Screen Theme -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar"> <!-- ✅ FIXED -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- 🎨 Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- 📝 Custom Text Input Style -->
    <style name="CustomTextInput" parent="Widget.Material3.TextInputLayout.FilledBox"> <!-- ✅ FIXED -->
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- 📦 Custom CardView Style -->
    <style name="CustomCardStyle" parent="Widget.MaterialComponents.CardView">
    <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">4dp</item>
        <item name="android:radius">12dp</item>
    </style>

</resources>



