<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- CardView for Item Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <!-- Item Image -->
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_item"
                android:contentDescription="@string/item_image_desc"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"/>

            <!-- Item Name -->
            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/on_background"
                android:layout_marginBottom="8dp"/>

            <!-- Item Quantity -->
            <TextView
                android:id="@+id/itemQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_quantity"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp"/>

            <!-- NFC Tag Information -->
            <TextView
                android:id="@+id/itemNfcTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC Tag: Not Linked"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Edit Button (Now Properly Constrained) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Item"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:textColor="@color/on_primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/itemCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
